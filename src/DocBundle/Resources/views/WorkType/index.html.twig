{% extends '::base.html.twig' %}

{% block body -%}
    <h1>WorkType list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idname</th>
                <th>Namefr</th>
                <th>Nameen</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('worktype_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idName }}</td>
                <td>{{ entity.nameFr }}</td>
                <td>{{ entity.nameEn }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('worktype_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('worktype_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('worktype_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
