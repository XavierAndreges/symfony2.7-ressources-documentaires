{% extends '::base.html.twig' %}

{% block body -%}
    <h1>File</h1>

    <table class="record_properties">

        <tbody>

            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ entity.fileName }}</td>
            </tr>
            <tr>
                <th>Namefr</th>
                <td>{{ entity.nameFr }}</td>
            </tr>
            <tr>
                <th>Nameen</th>
                <td>{{ entity.nameEn }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ (entity.size/1024)|round }} Ko</td>
            </tr>
            <tr>
                <th>Works</th>
                <td>
                    {% for work in entity.works %}
                        {{ work.nameFr }}
                        {% if not loop.last %} | {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Structures</th>
                <td>
                    {% for structure in entity.structures %}
                        {{ structure.name }}
                        {% if not loop.last %} | {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Jobs</th>
                <td>
                    {% for job in entity.jobs %}
                        {{ job.functionFr }}
                        {% if not loop.last %} | {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src=" {{ asset('files/' ~ entity.fileName ) }}" class="image600" />
                </td>
            </tr>

        </tbody>

    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('file') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('file_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{ path('file_delete', { 'id': entity.id }) }}" onclick="return confirm('are u sure?')">
            Delete
        </a>
    </li>
</ul>
{% endblock %}
