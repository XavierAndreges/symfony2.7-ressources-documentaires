{% extends '::base.html.twig' %}

{% block title %}New techno{% endblock %}


{% block body -%}


	<h3>Création d'une techno</h3>


	<div class="well">

	  	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

		    {{ form_errors(form) }}


			<div class="form-group">

		      {{ form_label(form.name, "name", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		      {{ form_errors(form.name) }}

		      <div class="col-sm-4">
		        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		      </div>

		    </div>


		   	<div class="form-group">

		      {{ form_label(form.textFr, "textFr", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		      {{ form_errors(form.textFr) }}

		      <div class="col-sm-4">
		        {{ form_widget(form.textFr, {'attr': {'class': 'form-control'}}) }}
		      </div>

		    </div>


		    <div class="form-group">

		      {{ form_label(form.textEn, "textEn", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		      {{ form_errors(form.textEn) }}

		      <div class="col-sm-4">
		        {{ form_widget(form.textEn, {'attr': {'class': 'form-control'}}) }}
		      </div>

		    </div>


		    <div class="form-group">

		      {{ form_label(form.webSite, "webSite", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		      {{ form_errors(form.webSite) }}

		      <div class="col-sm-4">
		        {{ form_widget(form.webSite, {'attr': {'class': 'form-control'}}) }}
		      </div>

		    </div>


		    <div class="form-group">

		      {{ form_label(form.technoCategory, "technoCategory", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		      {{ form_errors(form.technoCategory) }}

		      <div class="col-sm-4">
		        {{ form_widget(form.technoCategory, {'attr': {'class': 'form-control'}}) }}
		      </div>

		    </div>


		    <div class="form-group">

		      {{ form_label(form.workType, "workType", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		      {{ form_errors(form.workType) }}

		      <div class="col-sm-4">
		        {{ form_widget(form.workType, {'attr': {'class': 'form-control'}}) }}
		      </div>

		    </div>

				<div class="form-group">

					{{ form_label(form.experienceTime, "Nombre d'années d'expérience", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

					{{ form_errors(form.experienceTime) }}

					<div class="col-sm-4">
						{{ form_widget(form.experienceTime, {'attr': {'class': 'form-control'}}) }}
					</div>

				</div>

				<div class="form-group">

					{{ form_label(form.startedYear, "Année de prise en main", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

					{{ form_errors(form.startedYear) }}

					<div class="col-sm-4">
						{{ form_widget(form.startedYear, {'attr': {'class': 'form-control'}}) }}
					</div>

				</div>

		    <div class="form-group">

		      {{ form_label(form.uploadedFiles, "uploadedFiles", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		      {{ form_errors(form.uploadedFiles) }}

		      <div id="block_image" class="col-sm-4">

			      	{% for file in entity.files %}
	                	<a class="delete_file" id="file_{{ file.id }}" href="javascript: file_delete({{ file.id }})" onclick="return confirm('are u sure?')">
	                		<img src=" {{ asset('assets/close.png') }}" class="close_cross" />
	                		<img src=" {{ asset('files/' ~ file.fileName ) }}" class="image absoluteIndex" />
	                	</a>
	            	{% endfor %}

	            	<div class="row">
	            		<div class="col-sm-12">
			            	<label class="myLabel">
		    					<input type="file" id="docbundle_techno_uploadedFiles" name="docbundle_techno[uploadedFiles][]" multiple="multiple" class="form-control">
		    					<span>Ajouter des fichiers</span>
							</label>
						</div>
					</div>

            	</div>

		    </div>

			<div class="row">

				<div class="col-sm-3">
					<a href="{{ path('techno') }}">
            			Back to the list
        			</a>
		    	</div>

				<div class="col-sm-4">
		    		{{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
		    	</div>

		    </div>

		{{ form_row(form._token) }}

	    {{ form_end(form, {'render_rest': false}) }}

	</div>




{% endblock %}
